<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for All Edit Texts-->
    <style name="StyleEtCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
    </style>

    <!--Style for EditText Hint Property-->
    <style name="StyleEtHintCommon" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
    </style>

    <!--Style for TextView Title-->
    <style name="StyleTvCommonTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlueGrey</item>
        <item name="android:textSize">@dimen/font_12sp</item>
    </style>

    <!--Style for Horizontal View-->
    <style name="StyleViewHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/elevation_dimen_2dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
</resources>
