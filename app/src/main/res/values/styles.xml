<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:popupMenuStyle">@style/StylePopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/StylePopupMenuTextAppearanceLarge
        </item>
    </style>

    <style name="StylePopupMenu" parent="@android:style/Widget.Material.PopupMenu">
        <item name="android:popupBackground">@color/colorWhite</item>
    </style>

    <style name="StylePopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/font_6sp</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
    </style>

    <style name="StyleOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="elevation">@dimen/dimen_3dp</item>
        <item name="android:popupElevation">@dimen/dimen_3dp</item>
    </style>

    <!--Style for All Edit Texts-->
    <style name="StyleEtCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_5sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
    </style>

    <!--Style for All Button-->
    <style name="Widget.MaterialComponents.Button.BtnCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/font_gotham_medium</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:textSize">@dimen/font_4sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.BtnTransCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/font_gotham_medium</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:textSize">@dimen/font_4sp</item>
    </style>

    <!--Style for EditText Hint Property-->
    <style name="StyleEtHintCommon" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/font_5sp</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
    </style>

    <!--Style for TextView Title-->
    <style name="StyleTvCommonTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlueGrey</item>
        <item name="android:textSize">@dimen/font_9sp</item>
    </style>

    <!--Style for TextView Subtitle-->
    <style name="StyleTvSubTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_gotham_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/font_6sp</item>
    </style>

    <style name="StyleTvListHeader">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_gotham_medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/font_5sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_5dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Style for Small TextView Title-->
    <style name="StyleTvCommonSmallTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_gotham_book</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlueGrey</item>
        <item name="android:textSize">@dimen/font_5sp</item>
    </style>

    <!--Style for Horizontal View-->
    <style name="StyleViewHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/elevation_dimen_2dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!--Custom dialog animation-->
    <style name="StyleCommonDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="StyleCommonDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="StyleTvDialogAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_gotham_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="StyleCommonMiddleCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">@dimen/dimen_160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="android:translationZ">@dimen/elevation_dimen_2dp</item>
        <item name="cardElevation">@dimen/elevation_dimen_1dp</item>
        <item name="cardCornerRadius">@dimen/elevation_dimen_2dp</item>
    </style>
</resources>
